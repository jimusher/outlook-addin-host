<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="MailApp">
  <Id>85089790-8b34-4d33-8dca-d2d35f6e6ba2</Id>
  <Version>1.0.0.6</Version>
  <ProviderName>CHAP</ProviderName>
  <DefaultLocale>en-GB</DefaultLocale>
  <DisplayName DefaultValue="Extract URLs"/>
  <Description DefaultValue="Open a task pane to extract URLs from the selected message."/>
  <IconUrl DefaultValue="https://jimusher.github.io/outlook-addin-host/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://jimusher.github.io/outlook-addin-host/icon-64.png"/>
  <SupportUrl DefaultValue="https://jimusher.github.io/outlook-addin-host/support.html"/>

  <AppDomains>
    <AppDomain>jimusher.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.3">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://jimusher.github.io/outlook-addin-host/taskpane.html"/>
        <RequestedHeight>360</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- Correct nested VersionOverrides: 1.0 wrapping 1.1 (mail schemas) -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
                    xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
                    xsi:type="VersionOverridesV1_0">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="res.CommandsUrl"/>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="grp.ExtractUrls">
                <Label resid="res.groupLabel"/>
                <Control xsi:type="Button" id="btn.OpenTaskPane">
                  <Label resid="res.buttonLabel"/>
                  <Icon>
                    <bt:Image size="16" resid="res.icon16"/>
                    <bt:Image size="32" resid="res.icon32"/>
                    <bt:Image size="80" resid="res.icon80"/>
                  </Icon>
                  <Supertip>
                    <Title resid="res.buttonLabel"/>
                    <Description resid="res.buttonTooltip"/>
                  </Supertip>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="res.taskpaneUrl"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Resources for commands (strings, images, urls) -->
    <Resources>
      <bt:Images>
        <bt:Image id="res.icon16" DefaultValue="https://jimusher.github.io/outlook-addin-host/icon-16.png"/>
        <bt:Image id="res.icon32" DefaultValue="https://jimusher.github.io/outlook-addin-host/icon-32.png"/>
        <bt:Image id="res.icon80" DefaultValue="https://jimusher.github.io/outlook-addin-host/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="res.taskpaneUrl" DefaultValue="https://jimusher.github.io/outlook-addin-host/taskpane.html"/>
        <bt:Url id="res.CommandsUrl" DefaultValue="https://jimusher.github.io/outlook-addin-host/commands.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="res.groupLabel" DefaultValue="Extract URLs"/>
        <bt:String id="res.buttonLabel" DefaultValue="Open Extractor"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="res.buttonTooltip" DefaultValue="Open the task pane to extract URLs from this message."/>
      </bt:LongStrings>
    </Resources>

    <!-- Nested VersionOverrides 1.1 for Outlook newer features (optional but allowed) -->
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
                      xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
                      xsi:type="VersionOverridesV1_1">
      <Requirements>
        <bt:Sets DefaultMinVersion="1.5">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>
      <Hosts>
        <Host xsi:type="Mailbox">
          <DesktopFormFactor>
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="grp.ExtractUrlsV11">
                  <Label resid="res.groupLabel"/>
                  <Control xsi:type="Button" id="btn.OpenTaskPaneV11">
                    <Label resid="res.buttonLabel"/>
                    <Icon>
                      <bt:Image size="16" resid="res.icon16"/>
                      <bt:Image size="32" resid="res.icon32"/>
                      <bt:Image size="80" resid="res.icon80"/>
                    </Icon>
                    <Supertip>
                      <Title resid="res.buttonLabel"/>
                      <Description resid="res.buttonTooltip"/>
                    </Supertip>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="res.taskpaneUrl"/>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>
          </DesktopFormFactor>
        </Host>
      </Hosts>
    </VersionOverrides>

  </VersionOverrides>
</OfficeApp>
